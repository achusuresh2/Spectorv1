<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.spector.beacon.spectorv1.AssociatePatient">

    <TextView android:text="@string/associate_instruction" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/associate_instruction_text"
        android:paddingBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/associate_instruction_text"
        android:text="Closest Beacon"
        android:layout_centerHorizontal="true"
        android:id="@+id/title_closest_text"
        android:textSize="32dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_closest_text"
        android:text="Looking for nearby beacons..."
        android:layout_centerHorizontal="true"
        android:textSize="24dp"
        android:id="@+id/closest_text"
        android:gravity="center_horizontal"
        android:paddingBottom="32dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/associate_patient_button"
        android:layout_below="@id/closest_text"
        android:layout_centerHorizontal="true"
        android:text="Associate Patient"/>

</RelativeLayout>
